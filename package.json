{
	"name": "obsidian-sample-plugin",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"scripts": {
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"build:esbuild": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"build:css": "npx tailwindcss -i ./src/styles.css -o ./public/styles.css --minify",
		"build": "npm-run-all --parallel build:*",
		"watch:esbuild": "node esbuild.config.mjs",
		"watch:css": "npx tailwindcss -i ./src/styles.css -o ./styles.css --watch",
		"dev": "npm-run-all --parallel watch:*"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@ohm-js/cli": "^2.0.0",
		"@types/moo": "^0.5.9",
		"@types/node": "^16.11.6",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"autoprefixer": "^10.4.16",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"esbuild-style-plugin": "^1.6.3",
		"npm-run-all": "^4.1.5",
		"obsidian": "latest",
		"postcss": "^8.4.32",
		"tailwindcss": "^3.3.6",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"moo": "^0.5.2",
		"ohm-js": "^17.1.0",
		"peggy": "^3.0.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}